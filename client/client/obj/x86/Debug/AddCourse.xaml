<Page x:ConnectionId='1'
                          
    x:Class="client.AddCourse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:client"
    xmlns:service ="using:client.ServiceReference4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid FlowDirection="RightToLeft">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/background1.jpg"/>
        </Grid.Background>
        <Image Source="/Assets/logo_mobile.png" Width="200" Height="200" Margin="30" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <StackPanel Orientation="Horizontal" >
            <Button x:ConnectionId='13'  Background="#FF924E95" BorderBrush="#FFE0D5D5" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" Width="50"             >
                <Button.Content >
                    <SymbolIcon Symbol="Forward" Foreground="#FFB9E4F5">

                    </SymbolIcon>
                </Button.Content>
            </Button>
            <Button x:ConnectionId='14'  Background="#FF924E95" BorderBrush="#FFE0D5D5" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" Width="50"                 >
                <Button.Content >
                    <SymbolIcon Symbol="Home" Foreground="#FFB9E4F5">

                    </SymbolIcon>
                </Button.Content>
            </Button>
        </StackPanel>
        <TextBlock Text="הוספת סדנה" HorizontalAlignment="Center" FontSize="40" Foreground="#FF924E95" ></TextBlock>
        <StackPanel HorizontalAlignment="Center" Margin="100">


            <ComboBox x:ConnectionId='3' x:Name="courseCombo" Header="בחר סוג סדנה" FlowDirection="RightToLeft" Margin="18" Width="300" HorizontalAlignment="Center" Foreground="#FF924E95">
                <ComboBox.ItemTemplate>
                    <DataTemplate                                >
                        <ComboBoxItem Content="{Binding nameTypeCourse}" Tag="{Binding}" Foreground="#FF924E95" FontSize="18" ></ComboBoxItem>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <ComboBox x:ConnectionId='4' x:Name="ststusCombo" Width="300" Header="סטטוס" HorizontalAlignment="Center" Margin="20">
                <ComboBoxItem Foreground="#FF924E95" FontSize="18" Content="בתכנון"></ComboBoxItem>
                <ComboBoxItem Foreground="#FF924E95" FontSize="18" Content="בהרשמה"></ComboBoxItem>
                <ComboBoxItem Foreground="#FF924E95" FontSize="18" Content="פעיל"></ComboBoxItem>
                <ComboBoxItem Foreground="#FF924E95" FontSize="18" Content="בוצע"></ComboBoxItem>
            </ComboBox>
            <TextBox x:ConnectionId='5' x:Name="price" Header="מחיר" Width="300" HorizontalAlignment="Center" Margin="20"></TextBox>
            <TextBox x:ConnectionId='6' x:Name="numberOfLessons" Header="מספר שיעורים בסדנה" Width="300" HorizontalAlignment="Center" Margin="20"></TextBox>
            <TextBox x:ConnectionId='7' x:Name="discrabtion" Header="תיאור" Width="300" HorizontalAlignment="Center" Margin="20" Text=" "></TextBox>
            <Button x:ConnectionId='8'  Content="הוסף" HorizontalAlignment="Right" Width="100" Margin="20"  Foreground="#FFB9E4F5" Background="#FF924E95" BorderBrush="#FFE0D5D5"                   ></Button>
            <TextBlock x:ConnectionId='9' x:Name="txtMessage" Text=" " HorizontalAlignment="Center" FontSize="20" Foreground="#FF924E95"  Margin="15"></TextBlock>
            <TextBlock x:ConnectionId='10' x:Name="txtMessage1" Text=" " HorizontalAlignment="Center" FontSize="20" Foreground="#FF924E95"  Margin="10"></TextBlock>

        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" >
            <Image Source="/Assets/hug-13.png" Width="150" Height="150" />
        </StackPanel>
        <Button x:ConnectionId='2' x:Name="btnCM" Visibility="Collapsed" Content="לעריכת שיעורי סדנה" Height="50" Width="auto" Margin="100,0,0,204"  Foreground="#FFB9E4F5" Background="#FF924E95" BorderBrush="#FFE0D5D5"                       VerticalAlignment="Bottom"/>
    </Grid>
</Page>


