<Page x:ConnectionId='1'
                          
    x:Class="client.AddCustomer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:client"
    xmlns:service ="using:client.ServiceReference4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/background1.jpg"/>
        </Grid.Background>
        <Image Source="/Assets/logo_mobile.png" Width="200" Height="200" Margin="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="50" VerticalAlignment="Top">

            <Button x:ConnectionId='12'  Background="#FF924E95" BorderBrush="#FFE0D5D5"  VerticalAlignment="Top" FontSize="30" Width="50"                 >
                <Button.Content >
                    <SymbolIcon Symbol="Home" Foreground="#FFB9E4F5">

                    </SymbolIcon>
                </Button.Content>
            </Button>
            <Button x:ConnectionId='13'  Background="#FF924E95" BorderBrush="#FFE0D5D5"  VerticalAlignment="Top" FontSize="30" Width="50"             >
                <Button.Content >
                    <SymbolIcon Symbol="Forward" Foreground="#FFB9E4F5">

                    </SymbolIcon>
                </Button.Content>
            </Button>
        </StackPanel>

        <ScrollViewer><StackPanel Margin="20">
            <TextBlock Text="הוספת איש קשר" HorizontalAlignment="Center" FontSize="40"  Foreground="#FF924E95" ></TextBlock>
        <StackPanel HorizontalAlignment="Center" Margin="100" FlowDirection="RightToLeft">

                <TextBox x:ConnectionId='2' x:Name="firstName" Header="שם" Margin="20" Width="250" Foreground="#FF924E95"></TextBox>
                <TextBox x:ConnectionId='3' x:Name="telephon"  Header="טלפון" Margin="20" Width="250" Foreground="#FF924E95"></TextBox>
                <TextBox x:ConnectionId='4' x:Name="mail"      Header="מייל" Margin="20" Width="250" Foreground="#FF924E95"></TextBox>
                <TextBox x:ConnectionId='5' x:Name="adress"    Header="כתובת" Margin="20" Width="250" Foreground="#FF924E95"></TextBox>
                <ComboBox x:ConnectionId='6' x:Name="city"  Header="עיר" FlowDirection="RightToLeft" Margin="20" Width="250"  >
                    <ComboBox.ItemTemplate>
                        <DataTemplate                            >
                            <ComboBoxItem Content="{Binding nameCity}" Tag="{Binding}" Foreground="#FF924E95" FontSize="18"></ComboBoxItem>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBox x:ConnectionId='7' x:Name="notes"    PlaceholderText="הערות" Margin="20" Width="250" Foreground="#FF924E95"></TextBox>

                <Button x:ConnectionId='8' Content="הוסף" HorizontalAlignment="Right" Width="100" Margin="20" Foreground="#FFB9E4F5" Background="#FF924E95" BorderBrush="#FFE0D5D5"            ></Button>
                <TextBlock x:ConnectionId='9' x:Name="txtMessage" Text=" " HorizontalAlignment="Center" FontSize="20" Foreground="#FF924E95"  Margin="10"></TextBlock>

            </StackPanel>
        </StackPanel>
        </ScrollViewer>
        <StackPanel VerticalAlignment="Bottom" >
            <Image Source="/Assets/pencail.png" Width="200" Height="200" />
        </StackPanel>
    </Grid>
</Page>

